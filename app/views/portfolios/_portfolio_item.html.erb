<div class="col-md-4">
  <div class="card" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' , heigth: '100%' %>
    <p class="card-text">
      <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
    </p>

    <% if logged_in?(:site_admin) %>
    <p class="card-text">   
      <%= link_to "Edit", edit_portfolio_path(portfolio_item) %> / 
      <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?'} %>
    </p>
  <% end %>
  </div>
</div>
